<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="16.7dp"
    android:layout_marginEnd="16.7dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="6.7dp"
    android:layout_marginBottom="16.7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="horizontal">
        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="63.3dp"
            android:layout_height="63.3dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ivProduct"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="fitCenter"
            app:riv_corner_radius="10dp"
            app:riv_border_width="0dip"
            app:riv_border_color="#333333"
            app:riv_mutate_background="false"
            app:riv_tile_mode="clamp"
            app:riv_oval="false" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="NA"
                android:fontFamily="@font/sf_pro_display_medium"
                android:textColor="@color/black_25303c"
                android:includeFontPadding="false"/>
            <TextView
                android:id="@+id/details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13.3sp"
                android:layout_marginTop="5dp"
                android:text="NA"
                android:fontFamily="@font/sf_pro_display_regular"
                android:textColor="@color/grey_828990"
                android:includeFontPadding="false"/>
            <LinearLayout

                android:weightSum="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6.9dp">

                <TextView
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="13.3sp"
                    android:text=""
                    android:fontFamily="@font/sf_pro_display_regular"
                    android:textColor="@color/grey_828990"
                    android:includeFontPadding="false"/>
                <TextView
                    android:layout_weight="5"
                    android:id="@+id/tvPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6.7dp"
                    android:textSize="13.3sp"
                    android:text=""
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:textColor="@color/black_25303c"
                    android:includeFontPadding="false"/>



                <FrameLayout
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    >

                    <TextView

                        android:id="@+id/tvAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rect_pink_dark"
                        android:fontFamily="@font/roboto_regular"
                        android:includeFontPadding="false"
                        android:paddingStart="18dp"
                        android:paddingTop="3.7dp"
                        android:paddingEnd="18dp"
                        android:paddingBottom="3.7dp"
                        android:text="ADD"
                        android:textColor="@color/white"
                        android:textSize="11sp" />


                </FrameLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>